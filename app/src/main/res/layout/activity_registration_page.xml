<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/PLANTITOyellow"
        tools:context=".RegistrationPage">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAlignment="center" android:fontFamily="@font/mada_black"
            android:textColor="@color/PLANTITOblack" android:textSize="48sp"
            android:id="@+id/signUpTitle"
            android:contextClickable="false"
            android:textColorHighlight="@color/black"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp" android:layout_marginStart="24dp"/>

    <Button
            android:layout_width="44dp"
            android:layout_height="39dp" android:id="@+id/btnReturn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:onClick="OnClickReturn"
            android:background="@drawable/resource_return" android:layout_marginTop="13dp"
            android:layout_marginStart="16dp"/>

    <Button
            android:text="Log In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnLogin"
            android:onClick="OnClickLogin"
            android:fontFamily="@font/mada_medium" android:textSize="24sp"
            android:textColor="@color/PLANTITOblack" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp" android:background="#00FFFFFF"
            android:textAllCaps="false"/>
    <TextView
            android:text="Welcome to Plantitotita!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mada_medium"
            android:textSize="20sp"
            android:textColor="@color/PLANTITOblack"
            app:layout_constraintTop_toBottomOf="@+id/signUpTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="24dp" android:id="@+id/textView2"/>

    <TextView
            android:text="Let's create your account!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mada_medium"
            android:textSize="20sp"
            android:textColor="@color/PLANTITOblack"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="24dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp">

        <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView12"
                android:fontFamily="@font/mada_medium" android:textSize="20sp"
                android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"/>
        <EditText
                android:layout_width="320dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_button_white"
                android:layout_marginTop="1dp"
                android:textSize="20sp" android:textColor="@color/black" android:fontFamily="@font/mada_medium"
                android:paddingStart="25dp" android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12"/>
        <TextView
                android:text="Email Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView13"
                android:fontFamily="@font/mada_medium" android:textSize="20sp"
                android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="135dp"
                android:layout_marginStart="40dp"/>
        <EditText
                android:layout_width="320dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text|textEmailAddress"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_button_white"
                android:layout_marginTop="1dp"
                android:textSize="20sp" android:textColor="@color/black" android:fontFamily="@font/mada_medium"
                android:paddingStart="25dp" android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView13"/>

        <TextView
                android:text="Mobile Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView14"
                android:fontFamily="@font/mada_medium" android:textSize="20sp"
                android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="240dp"
                android:layout_marginStart="40dp"/>
        <EditText
                android:layout_width="320dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text|phone|number"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_button_white"
                android:layout_marginTop="1dp"
                android:textSize="20sp" android:textColor="@color/black" android:fontFamily="@font/mada_medium"
                android:paddingStart="25dp" android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView14"/>
        <TextView
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView15"
                android:fontFamily="@font/mada_medium" android:textSize="20sp"
                android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="345dp"
                android:layout_marginStart="40dp"/>

        <EditText
                android:layout_width="320dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text|textPassword"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_button_white"
                android:layout_marginTop="1dp"
                android:textSize="20sp" android:textColor="@color/black" android:fontFamily="@font/mada_medium"
                android:paddingStart="25dp" android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView15" android:id="@+id/editTextPassword"/>

        <TextView
                android:text="Confirm Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView16"
                android:fontFamily="@font/mada_medium" android:textSize="20sp"
                android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="450dp"
                android:layout_marginStart="40dp"/>
        <EditText
                android:layout_width="320dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="text|textPassword"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_button_white"
                android:layout_marginTop="1dp"
                android:textSize="20sp" android:textColor="@color/black" android:fontFamily="@font/mada_medium"
                android:paddingStart="25dp" android:paddingEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView16" android:id="@+id/editTextConfirmPassword"/>

        <Button
                android:text="Create Account"
                android:layout_width="161dp"
                android:layout_height="68dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextConfirmPassword" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:scrollbars="vertical"
                android:id="@+id/btnCreateAccount" android:background="@drawable/custom_button_yellow"
                android:fontFamily="@font/mada_black" android:textAllCaps="false" android:textSize="16sp"
                android:textColor="@color/PLANTITOblack"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>